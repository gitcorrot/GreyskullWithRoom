<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragmentStats">

    <TextView
        android:id="@+id/fragment_statistics_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Statistics"
        android:textSize="50sp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/fragment_statistics_line_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_statistics_name_spinner"
        android:minHeight="250dp"
        android:padding="20dp" />

    <Spinner
        android:id="@+id/fragment_statistics_name_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_statistics_label"
        android:layout_margin="10dp"/>

</RelativeLayout>