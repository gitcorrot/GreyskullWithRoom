<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorFragmentStats"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/new_exercise_workout_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout name"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>

        <ImageButton
            android:id="@+id/new_exercise_delete_button"
            android:contentDescription="delete button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/new_exercise_workout_name_text_view"
            android:src="@drawable/ic_delete_black_24dp"
            android:background="@color/colorTransparentButton"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/new_exercise_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_below="@id/new_exercise_workout_name_text_view"
            android:layout_above="@id/new_exercise_add_set_button"/>

        <Button
            android:id="@+id/new_exercise_add_set_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Add set"
            android:background="@color/colorTransparentButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>