<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp">

        <TextView
            android:id="@+id/routine_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Routine name"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/routine_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_delete_black_24dp" />

        <ImageButton
            android:id="@+id/routine_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/routine_delete_button"
            android:background="@color/transparent"
            android:src="@drawable/ic_edit_black_24dp" />

        <LinearLayout
            android:id="@+id/routine_sub_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:layout_below="@id/routine_label">

            <TextView
                android:id="@+id/routine_exercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Exercises"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>